<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textStyle="bold"
    android:typeface="monospace"
    android:textColor="#000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.apatel9273.assign.MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



            <TextView
                android:layout_width="172dp"
                android:layout_height="39dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="The Roster"
                android:id="@+id/userName"
                android:typeface="monospace"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/scrollView"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Enter your Name:"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uname"
                android:layout_gravity="center_horizontal" />

            <CheckBox
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Thinks We are Going Steady"
                android:id="@+id/steadygo"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Select Your Eye color"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/textView3" />

            <Spinner
                android:layout_width="177dp"
                android:layout_height="43dp"
                android:id="@+id/spinner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Select your Birth Date"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/textView4" />

            <EditText
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:id="@+id/date" />

            <Button
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:text="Calender"
                android:textStyle="bold"
                android:background="#FFB6C1"
                android:id="@+id/calender" />

            <TextView
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:text="Select Shirt size"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/textView5" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/radioGroup1">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XS"
                    android:id="@+id/XS"
                    android:checked="false"
                    android:layout_weight="0.66" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="s"
                    android:id="@+id/s"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:id="@+id/M"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:id="@+id/L"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XL"
                    android:id="@+id/XL"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXL"
                    android:id="@+id/XXL"
                    android:checked="false" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Size for Pant"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/pantsize" />

            <SeekBar
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar1"
                android:max="16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Size for Shirt"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/shirtsize" />

            <SeekBar
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar2"
                android:max="12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Size for Shoes"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/shoessize" />

            <SeekBar
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar3"
                android:max="12" />

            <Button
                android:layout_width="130dp"
                android:layout_height="39dp"
                android:background="#FFB6C1"
                android:text="Save"
                android:textStyle="bold"

                android:layout_gravity="center_horizontal"
                android:id="@+id/SaveData" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>

